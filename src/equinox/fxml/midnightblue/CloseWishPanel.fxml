<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root_" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="350.0" spacing="10.0" stylesheets="@../../css/midnightblue/Commons.css" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="equinox.controller.CloseWishPanel">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label focusTraversable="false" maxWidth="1.7976931348623157E308" text="Enter wish closure description. You can use up to 1000 characters." textFill="SLATEGRAY" wrapText="true" />
      <TextArea fx:id="closureText_" prefHeight="150.0" prefWidth="300.0" promptText="Enter closure description. You can use up to 1000 characters." wrapText="true" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCancelClicked" styleClass="menuButton" text="Cancel">
               <font>
                  <Font size="11.0" />
               </font></Button>
            <Button layoutX="415.0" layoutY="10.0" mnemonicParsing="false" onAction="#onOkClicked" styleClass="menuButton" text="Ok">
               <font>
                  <Font size="11.0" />
               </font></Button>
         </children>
      </HBox>
   </children>
</VBox>
