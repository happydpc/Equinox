<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root_" spacing="10.0" stylesheets="@../../css/midnightblue/PopOver.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="equinox.controller.CommentLoadCasePanel">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <TextField fx:id="comments_" maxWidth="-Infinity" minWidth="-Infinity" onAction="#onOkClicked" prefWidth="300.0" promptText="Enter comments (max. 500 characters)" styleClass="popovertextfield" />
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onCancelClicked" styleClass="popoverbutton" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#onOkClicked" styleClass="popoverbutton" text="Ok" />
         </children>
      </HBox>
   </children>
</VBox>
